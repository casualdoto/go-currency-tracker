    "/api/docs": {
      "get": {
        "summary": "API documentation",
        "description": "Interactive API documentation with Swagger UI",
        "operationId": "apiDocs",
        "responses": {
          "200": {
            "description": "HTML page with API documentation",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/openapi": {
      "get": {
        "summary": "OpenAPI specification",
        "description": "OpenAPI specification in JSON format",
        "operationId": "openapi",
        "responses": {
          "200": {
            "description": "OpenAPI specification",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Valute": {
        "type": "object",
        "properties": {
          "ID": {
            "type": "string",
            "example": "R01235"
          },
          "NumCode": {
            "type": "string",
            "example": "840"
          },
          "CharCode": {
            "type": "string",
            "example": "USD"
          },
          "Nominal": {
            "type": "integer",
            "example": 1
          },
          "Name": {
            "type": "string",
            "example": "Доллар США"
          },
          "Value": {
            "type": "number",
            "format": "float",
            "example": 75.4571
          },
          "Previous": {
            "type": "number",
            "format": "float",
            "example": 75.1234
          }
        }
      },
      "HistoricalRate": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date",
            "example": "2023-05-15"
          },
          "value": {
            "type": "number",
            "format": "float",
            "example": 75.4571
          },
          "nominal": {
            "type": "integer",
            "example": 1
          }
        }
      },
      "HistoricalCryptoRate": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "integer",
            "format": "int64",
            "example": 1672531200000
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "example": "2023-01-01 00:00:00"
          },
          "open": {
            "type": "number",
            "format": "float",
            "example": 16547.32
          },
          "high": {
            "type": "number",
            "format": "float",
            "example": 16612.45
          },
          "low": {
            "type": "number",
            "format": "float",
            "example": 16432.67
          },
          "close": {
            "type": "number",
            "format": "float",
            "example": 16542.78
          },
          "volume": {
            "type": "number",
            "format": "float",
            "example": 12345.67
          }
        }
      }
    }
  }
}
